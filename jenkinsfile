

pipeline {
    agent any
    stages {
        stage('MESSAGE') {
            steps {
                script{
                    env.name = "mani"
                    sh'''
                    ./message.sh "mani"
                    '''
                }
            }
        }
        stage('TEST') {
            steps {
                sh'''
                ./test.sh ${env.name}
                '''
            }
        }
    }
    
}