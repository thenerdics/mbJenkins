def message = "mani-*"

pipeline {
    agent any
    stages {
        stage('example') {
            steps {
                sh '''
                message=$( curl 'http://localhost:8080' )
                echo "Hello $JOB_NAME"
                message="Hello $JOB_NAME"
                '''
            }
        }
        stage('pass the message'){
            steps {
                    sh "./test.sh $env.message"
            }
        }
    }
    post {
        always {
            echo "Always post this"
        }
    }
}