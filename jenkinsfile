pipeline {
    agent any
    stages {
        stage('Stage Example') {
            steps {
               curl localhost:8080/job | grep -i "error"
               echo "curled local host"
            }
        }
        stage('Steps Example'){
            steps {
                sh 'echo "Hello world"'
            }
        }
    }
    post { 
        always { 
            echo 'I will always say Hello again!'
        }
    }
}