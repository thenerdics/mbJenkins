def message = "mani-*"

pipeline {
    agent any
    stages {
        stage('example') {
            steps {
                sh '''
                message=$( curl 'http://localhost:8080' )
                echo "Hello $JOB_NAME"
                message=$(message)
                sh "./test.sh ${message}"
                '''
                
            }
        }
    }
    post {
        always {
            echo "Always post this"
        }
    }
}