def message = "mani is the best"

pipeline {
    agent any
    stages {
        stage('example') {
            steps {
                sh '''
                message=$( curl 'http://localhost:8080' )
                echo "Hello $JOB_NAME"
                ./test.sh "${message}"
                '''
                
            }
        }
    }
    post {
        always {
            echo "Always post this"
        }
    }
}