def message = "mani-*"

pipeline {
    agent any
    stages {
        stage('example') {
            steps {
                sh '''
                message=$( curl 'http://localhost:8080' )
                echo "Hello $JOB_NAME"
                message=$(message)
                '''
            }
        }
        stage('pass the message'){
            try {
                sh "./test.sh ${env.message}"
            } catch(e) {
                println "${e}"
            }
        }
    }
    post {
        always {
            echo "Always post this"
        }
    }
}