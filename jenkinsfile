#!/usr/bin/env groovy


def message = "mani-*"
def groovyTest = load('test.groovy')

node{
    agent any
    stages {
        stage('example') {
            steps {
                sh '''
                message=$( curl 'http://localhost:8080' )
                echo "Hello $JOB_NAME"
                '''
                script {
                    groovyTest.validateCommits()
                }
            }
        }
    }
    post {
        always {
            echo "Always post this"
        }
    }
}